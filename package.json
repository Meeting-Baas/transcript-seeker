{
  "name": "transcript-seeker",
  "private": true,
  "version": "1.0.0",
  "homepage": "https://meetingbaas.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meeting-Baas/transcript-seeker"
  },
  "description": "An open-source, browser-based transcript viewer and manager. Upload, transcribe, and chat with meeting recordings using AI. Features meeting bot integration, note-taking, and standalone mode.",
  "license": "MIT",
  "author": "Meeting-Baas",
  "keywords": [
    "meeting-bot",
    "meetingbaas"
  ],
  "scripts": {
    "start": "pnpm backend",
    "dev": "pnpm frontend:dev",
    "frontend:build": "cd client && pnpm build",
    "frontend:dev": "cd client && cross-env NODE_ENV=development pnpm dev"
  },
  "devDependencies": {
    "@meeting-baas/shared": "*:workspace",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "typescript": "^4.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "client/"
    ]
  },
  "pnpm": {
    "overrides": {
      "@meeting-baas/shared": "workspace:*"
    }
  },
  "packageManager": "pnpm@9.12.2"
}

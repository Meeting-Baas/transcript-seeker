{
  "name": "@meeting-baas/api",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm with-env esbuild src/index.ts --platform=node --bundle --outdir=dist",
    "build:firebase": "pnpm pack && tar -xzf meeting-baas-api-*.tgz && pnpm with-env esbuild package/src/deployment/firebase.ts --platform=node --format=esm --packages=external --bundle --outfile=dist/index.js && cp package/package.json dist/package.json && rm -rf package meeting-baas-api-*.tgz",
    "dev": "pnpm with-env tsx watch src/index.ts",
    "clean": "git clean -xdf .cache .turbo .vercel node_modules",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "with-env": "dotenv -e ./.env.${NODE_ENV}.local --"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.2",
    "@libsql/client": "^0.14.0",
    "better-auth": "0.5.4-beta.9",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "firebase-functions-test": "^3.3.0",
    "googleapis": "^144.0.0",
    "hono": "^4.6.6"
  },
  "devDependencies": {
    "@meeting-baas/eslint-config": "workspace:*",
    "@meeting-baas/prettier-config": "workspace:*",
    "@meeting-baas/tailwind-config": "workspace:*",
    "@meeting-baas/tsconfig": "workspace:*",
    "@types/node": "^20.16.11",
    "drizzle-kit": "^0.26.2",
    "esbuild": "0.24.0",
    "prettier": "catalog:",
    "tsx": "^4.19.1",
    "typescript": "catalog:"
  }
}
